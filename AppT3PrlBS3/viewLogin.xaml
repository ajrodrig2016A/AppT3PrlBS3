<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppT3PrlBS3.viewLogin">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Turquoise" Padding="20" CornerRadius="0">
                <Label Text="Login - App Sistema Calificaciones UIsrael" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
            </Frame>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contrasena" IsPassword="True"/>
            
            <Button x:Name="btnIngresar" Text="Ingreso sistema de calificaciones Uisrael" Clicked="btnIngresar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>